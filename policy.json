{
  "maxChars": 2000,
  "minIntervalMs": 900,
  "bannedPatterns": [
    "(?i)api[_-]?key",
    "(?i)authorization[:=]",
    "(?i)secret",
    "(?i)<script[^>]*>",
    "(?i)onerror=",
    "(?i)onload=",
    "(?i)javascript:",
    "(?i)data:text/html",
    "(?i)file://"
  ],
  "allowedProviders": ["studio", "codex"],
  "denyUserAgents": [
    "(?i)bot",
    "(?i)spider",
    "(?i)crawler",
    "(?i)curl",
    "(?i)wget",
    "(?i)python-requests",
    "(?i)httpclient",
    "(?i)okhttp",
    "(?i)postman",
    "(?i)insomnia",
    "(?i)libwww"
  ]
}
