{
  "version": 2,
  "maxChars": 2000,
  "minIntervalMs": 900,
  "maxAttachments": 3,
  "maxAttachmentBytes": 1048576,
  "allowedAttachmentTypes": [
    "audio/webm",
    "audio/mp4",
    "audio/mpeg",
    "audio/wav",
    "text/plain",
    "text/markdown",
    "application/pdf",
    "image/png",
    "image/jpeg"
  ],
  "bannedPatterns": [
    "(?i)api[_-]?key",
    "(?i)authorization[:=]",
    "(?i)secret",
    "(?i)<script[^>]*>",
    "(?i)onerror=",
    "(?i)onload=",
    "(?i)javascript:",
    "(?i)data:text/html",
    "(?i)file://"
  ],
  "allowedProviders": ["atlas", "aurora"],
  "denyUserAgents": [
    "(?i)bot",
    "(?i)spider",
    "(?i)crawler",
    "(?i)curl",
    "(?i)wget",
    "(?i)python-requests",
    "(?i)httpclient",
    "(?i)okhttp",
    "(?i)postman",
    "(?i)insomnia",
    "(?i)libwww"
  ]
}
